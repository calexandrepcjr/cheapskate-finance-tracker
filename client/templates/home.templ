		templ.KV("bg-rose-50 border-rose-100 text-rose-700", isExpense),
		templ.KV("bg-green-50 border-green-100 text-green-700", !isExpense) }>
		<div class="bg-white p-2 rounded-full shadow-sm text-xl">
			if isExpense {
				ğŸ’¸
			} else {
				âœ…
			}
		</div>
		<div class="text-left">
			<div class="font-bold text-lg">Recorded {amount}</div>
			<div class="text-xs opacity-75">{desc}</div>
		</div>
	</div>
}

templ TransactionError(msg string) {
	<div class="p-4 rounded-xl bg-red-50 border border-red-100 text-red-700 animate-shake">
		âŒ {msg}
	</div>
}
